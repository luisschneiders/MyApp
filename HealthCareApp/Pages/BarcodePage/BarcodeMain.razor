@page "/admin/barcodes";
@using HealthCareApp.Components.Message;
@using HealthCareApp.Components.PageV3;
@using HealthCareApp.Components.Breadcrumb;

<div class="container-lg">
    <AuthorizeView>
        <Authorized>
            <PageWrapper>

                    <PageTopView>
                        <PageTopWrapper>
                            <PageTopTitle Title="Barcode labels" />
                            <Breadcrumb AppPageLink="@_appURL.AdminBarcodes"/>
                        </PageTopWrapper>
                    </PageTopView>

                    <PageMiddleView>
                        <PageMiddleWrapper>
                            <div class="row py-5">
                                <div class="col-sm-12 col-md-4 col-lg-4 m-auto">

                                    <div class="list-group shadow-lg">
                                        <NavLink class="list-group-item list-group-item-action d-flex gap-3 py-3 align-items-center border-light" aria-current="true"
                                                 href="@_appURL.AdminBarcodesMop">
                                            <i class="bi bi-upc-scan md-icon text-info"></i>
                                            <div class="d-flex gap-2 w-100 justify-content-between">
                                                <div>
                                                    <h6 class="mb-0">Mops</h6>
                                                    <p class="mb-0 opacity-75">Create label with department, location, pick up time, return time and quantity.</p>
                                                </div>
                                            </div>
                                            <i class="bi bi-chevron-right md-icon"></i>
                                        </NavLink>
                                        <NavLink class="list-group-item list-group-item-action d-flex gap-3 py-3 align-items-center border-light disabled opacity-50" aria-current="true"
                                                 href="@_appURL.AdminBarcodesChemical">
                                            <i class="bi bi-upc-scan md-icon text-info"></i>
                                            <div class="d-flex gap-2 w-100 justify-content-between">
                                                <div>
                                                    <h6 class="mb-0">Chemicals</h6>
                                                    <p class="mb-0 opacity-75">Create label with department, location and quantity.</p>
                                                </div>
                                            </div>
                                            <i class="bi bi-chevron-right md-icon"></i>
                                        </NavLink>
                                    </div>
                                </div>
                            </div>
                        </PageMiddleWrapper>
                    </PageMiddleView>

                    <PageBottomView>
                        <PageBottomWrapper />
                    </PageBottomView>

                </PageWrapper>
        </Authorized>
        <NotAuthorized>
            <NotAuthorizedMessage />
        </NotAuthorized>
    </AuthorizeView>
</div>
